---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/FooterPages/PageHeader';
import ContactForm from '../components/ContactForm/ContactForm';
---

<Layout 
title="Contacto - Casa Verde" 
description="Ponte en contacto con Casa Verde para cualquier consulta sobre nuestras plantas y productos."
>
<PageHeader title="Contacto" client:load />
<main class="content">
  <div class="contact-container">
    <div class="contact-info">
      <h2>Información de contacto</h2>
      <p><strong>Email:</strong> info@casaverde.com</p>
      <p><strong>Teléfono:</strong> +52 (55) 1234-5678</p>
      <p><strong>Dirección:</strong> Calle Ficticia 123, Col. Imaginaria, Ciudad de México, CP 12345</p>
      <div class="map-container">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3762.761737054568!2d-99.16869068456095!3d19.42702468688713!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1ff35f5bd1563%3A0x6c366f0e2de02ff7!2sZocalo%2C%20Centro%20Hist%C3%B3rico%20de%20la%20Cdad.%20de%20M%C3%A9xico%2C%20Centro%2C%20Cuauht%C3%A9moc%2C%2006000%20Ciudad%20de%20M%C3%A9xico%2C%20CDMX%2C%20Mexico!5e0!3m2!1sen!2sus!4v1638143237883!5m2!1sen!2sus" 
          width="100%" 
          height="300" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy">
        </iframe>
      </div>
    </div>
    <div class="contact-form">
      <h2>Envíanos un mensaje</h2>
      <ContactForm client:load />
    </div>
  </div>
</main>
</Layout>

<style>
.content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 1rem;
}
.contact-container {
  display: flex;
  gap: 2rem;
  margin-top: 2rem;
}
.contact-info, .contact-form {
  flex: 1;
}
.contact-info {
  background-color: #f8f8f8;
  padding: 2rem;
  border-radius: 8px;
}
.contact-form {
  background-color: #ffffff;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}
h2 {
  font-family: "Bebas-Title", sans-serif;
  font-size: 2rem;
  color: #2e8b57;
  margin-bottom: 1rem;
}
.map-container {
  margin-top: 1rem;
  border-radius: 8px;
  overflow: hidden;
}
@media (max-width: 768px) {
  .contact-container {
    flex-direction: column;
  }
}
</style>

