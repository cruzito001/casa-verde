---
import Layout from '../../layouts/Layout.astro';
import MacetasHeader from '../../components/HeaderComponents/MacetasHeader';
import ProductGrid from '../../components/CatalogComponents/ProductGrid';
import { macetasYute } from '../../data/macetas-yute';
import { macetasTerracota } from '../../data/macetas-terracota';

const allMacetas = [...macetasYute, ...macetasTerracota];
---

<Layout 
  title="Macetas - Casa Verde" 
  description="Explora nuestra colecciÃ³n de macetas en Casa Verde. Encuentra la maceta perfecta para tus plantas."
>
  <MacetasHeader client:load />
  <div class="catalogContainer">
    <h2 class="sectionTitle">Todas Nuestras Macetas</h2>
    <ProductGrid products={allMacetas} client:load />
  </div>
</Layout>

<style>
  .catalogContainer {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .sectionTitle {
    font-family: "Bebas-Title", sans-serif;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .sectionTitle {
      font-size: 2rem;
    }
  }
</style>

