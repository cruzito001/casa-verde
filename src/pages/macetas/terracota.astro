---
import Layout from '../../layouts/Layout.astro';
import MacetasHeader from '../../components/HeaderComponents/MacetasHeader';
import ProductGrid from '../../components/CatalogComponents/ProductGrid';
import { macetasTerracota } from '../../data/macetas-terracota';
---

<Layout 
  title="Macetas de Terracota - Casa Verde" 
  description="Explora nuestra colección de macetas de terracota en Casa Verde. Ideales para un look clásico y elegante."
>
  <MacetasHeader title="MACETAS DE TERRACOTA" client:load />
  <div class="catalogContainer">
    <h2 class="sectionTitle">Nuestras Macetas de Terracota</h2>
    <ProductGrid products={macetasTerracota} client:load />
  </div>
</Layout>

<style>
  .catalogContainer {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .sectionTitle {
    font-family: "Bebas-Title", sans-serif;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .sectionTitle {
      font-size: 2rem;
    }
  }
</style>

