---
import Layout from '../layouts/Layout.astro';
import KokeHeader from '../components/HeaderComponents/KokeHeader';
import ProductGrid from '../components/CatalogComponents/ProductGrid';
import { kokedamas } from '../data/kokedamas';
import { terrarios } from '../data/terrarios';
---

<Layout 
  title="Kokedamas y Terrarios - Casa Verde" 
  description="Descubre nuestra colección de kokedamas y terrarios en Casa Verde. Piezas únicas y decorativas para tu hogar."
>
  <KokeHeader client:load />
  <div class="catalogContainer">
    <section>
      <h2 class="sectionTitle">Nuestros Kokedamas</h2>
      <ProductGrid products={kokedamas} client:load />
    </section>
    <section>
      <h2 class="sectionTitle">Nuestros Terrarios</h2>
      <ProductGrid products={terrarios} client:load />
    </section>
  </div>
</Layout>

<style>
  .catalogContainer {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .sectionTitle {
    font-family: "Bebas-Title", sans-serif;
    font-size: 2.5rem;
    text-align: center;
    margin: 3rem 0 2rem;
    color: #333;
  }

  section {
    margin-bottom: 4rem;
  }

  @media (max-width: 768px) {
    .sectionTitle {
      font-size: 2rem;
      margin: 2rem 0 1.5rem;
    }

    section {
      margin-bottom: 3rem;
    }
  }
</style>

