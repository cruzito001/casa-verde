---
import Layout from '../../layouts/Layout.astro';
import InteriorHeader from '../../components/HeaderComponents/InteriorHeader';
import ProductGrid from '../../components/CatalogComponents/ProductGrid';
import { plantasFaciles } from '../../data/plantas-faciles';

---

<Layout 
  title="Plantas de Interior Fáciles - Casa Verde" 
  description="Descubre nuestra selección de plantas de interior fáciles de cuidar en Casa Verde. Perfectas para principiantes y espacios con poco mantenimiento."
>
  <InteriorHeader title="PLANTAS DE INTERIOR FÁCILES" client:load />
  <div class="catalogContainer">
    <h2 class="sectionTitle">Nuestras Plantas Fáciles de Cuidar</h2>
    <ProductGrid products={plantasFaciles} client:load />
  </div>
</Layout>

<style>
  .catalogContainer {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .sectionTitle {
    font-family: "Bebas-Title", sans-serif;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .sectionTitle {
      font-size: 2rem;
    }
  }
</style>

