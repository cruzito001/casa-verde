---
import Layout from '../../layouts/Layout.astro';
import InteriorHeader from '../../components/InteriorComponents/InteriorHeader';
import ProductGrid from '../../components/CatalogComponents/ProductGrid';
import { plantasPalmeras } from '../../data/plantas-palmeras';

---

<Layout 
  title="Palmeras de Interior - Casa Verde" 
  description="Explora nuestra selección de palmeras y plantas tipo palmera para interiores en Casa Verde. Añade un toque tropical a tu hogar."
>
  <InteriorHeader title="PALMERAS DE INTERIOR" client:load />
  <div class="catalogContainer">
    <h2 class="sectionTitle">Nuestras Palmeras y Plantas Tipo Palmera</h2>
    <ProductGrid products={plantasPalmeras} client:load />
  </div>
</Layout>

<style>
  .catalogContainer {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .sectionTitle {
    font-family: "Bebas-Title", sans-serif;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .sectionTitle {
      font-size: 2rem;
    }
  }
</style>

