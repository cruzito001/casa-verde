---
import Layout from '../../layouts/Layout.astro';
import InteriorHeader from '../../components/InteriorComponents/InteriorHeader';
import ProductGrid from '../../components/CatalogComponents/ProductGrid';
import { plantasGrandes } from '../../data/plantas-grandes';

---

<Layout 
  title="Plantas de Interior Grandes - Casa Verde" 
  description="Explora nuestra colección de plantas de interior grandes en Casa Verde. Perfectas para hacer una declaración audaz en tu espacio."
>
  <InteriorHeader title="PLANTAS DE INTERIOR GRANDES" client:load />
  <div class="catalogContainer">
    <h2 class="sectionTitle">Nuestras Plantas de Gran Tamaño</h2>
    <ProductGrid products={plantasGrandes} client:load />
  </div>
</Layout>

<style>
  .catalogContainer {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .sectionTitle {
    font-family: "Bebas-Title", sans-serif;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .sectionTitle {
      font-size: 2rem;
    }
  }
</style>

