---
import Layout from '../../layouts/Layout.astro';
import InteriorHeader from '../../components/HeaderComponents/InteriorHeader';import ProductGrid from '../../components/CatalogComponents/ProductGrid';
import { plantasPocaLuz } from '../../data/plantas-poca-luz';

---

<Layout 
  title="Plantas de Interior de Poca Luz - Casa Verde" 
  description="Descubre nuestras plantas de interior ideales para espacios con poca luz en Casa Verde. Perfectas para iluminar rincones oscuros de tu hogar."
>
  <InteriorHeader title="PLANTAS DE INTERIOR DE POCA LUZ" client:load />
  <div class="catalogContainer">
    <h2 class="sectionTitle">Nuestras Plantas para Espacios con Poca Luz</h2>
    <ProductGrid products={plantasPocaLuz} client:load />
  </div>
</Layout>

<style>
  .catalogContainer {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .sectionTitle {
    font-family: "Bebas-Title", sans-serif;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    color: #333;
  }

  @media (max-width: 768px) {
    .sectionTitle {
      font-size: 2rem;
    }
  }
</style>

